<div class="container">
	<div class="sixteen columns">
	
		<div id="page-title">
			<h2>Blog <span>/ Life, the Universe and Everything</span></h2>
			<div id="bolded-line"></div>
		</div>

	</div>
</div>

<div class="container">
<div class="twelve columns">
	
	<div class="post post-page">
		<%if @post.media %>
			<div class="post-img picture"><%="<a href='/#{@post.media}'"%> rel="image" title="Comic"><%="<img src='/#{@post.media}'"%> alt="" /><div class="image-overlay-zoom"></div></a></div>
		<%end%>
		<a href="#" class="post-icon standard"></a>
		<div class="post-content">
			<div class="post-title"><h2><a href="#"><%=@post.title%></a></h2></div>
			<div class="post-meta"><span><i class="mini-ico-calendar"></i>On <%=@post.date_created%></span> <span><i class="mini-ico-user"></i>By <a href="#">Bjorn</a></span></div>
			<div class="post-description">
				<%=@text%>
			</div>
		</div>
	</div>
	
	<%if @post.allow_comments%>
	<hr>
	<h3>Comments</h3>
	
	<% @post_comments.each do |comment| %>
	
		<h5><%=	comment.name %></h5> 
		<p><%= comment.body %></p>
	
	<% end %>

	<form action="/comment" method="post">
		<div>
		    <label for="name">Your Name, or appropriate pseudonym</label>
		    <input type="text" id="name" name="name" />
		</div>
		<div>
		    <label for="comment">Leave a comment if you so wish</label>
		    <input type="text" id="comment" name="comment" />
		</div>
		<div>
		    <label for="message">Send a private message (optional)</label>
		    <input type="text" id="message" name="message" />
		</div>
		<input type="submit" value="Submit" />
	</form>
	<%end%>
	
</div>
</div>
